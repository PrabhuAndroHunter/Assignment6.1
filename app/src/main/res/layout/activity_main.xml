<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.assignment.MainActivity">

    <TextView
        android:id="@+id/userNameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="@string/userNameTxtView" />

    <EditText
        android:id="@+id/userNameEdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userNameTxtView"
        android:ems="10"
        android:hint="@string/userNameEdtTxt"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pwdTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userNameEdtTxt"
        android:layout_marginTop="10dp"
        android:text="@string/pwdTxtView" />

    <EditText
        android:id="@+id/pwdEdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pwdTxtView"
        android:ems="10"
        android:hint="@string/pwdEdtTxt"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwdEdtTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/loginBtnTxt" />

    <TextView
        android:id="@+id/signUpTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/signUpTxt" />
</RelativeLayout>
